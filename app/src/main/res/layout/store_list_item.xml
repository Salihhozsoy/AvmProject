<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivStoreIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"

        android:src="@drawable/sunset"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvStoreName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Lc Waikiki"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/ivStoreIcon"
        app:layout_constraintTop_toTopOf="@id/ivStoreIcon" />

    <TextView
        android:id="@+id/tvStoreBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="A Block"
        android:textSize="15sp"

        app:layout_constraintLeft_toRightOf="@id/tvStoreName"
        app:layout_constraintTop_toTopOf="@id/ivStoreIcon" />

    <TextView
        android:id="@+id/tvStoreFloor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="2. Floor"
        android:textSize="15sp"

        app:layout_constraintLeft_toRightOf="@id/tvStoreBlock"
        app:layout_constraintTop_toTopOf="@id/ivStoreIcon" />

    <TextView
        android:id="@+id/tvStoreDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Clothes"
        app:layout_constraintLeft_toLeftOf="@id/tvStoreName"
        app:layout_constraintRight_toLeftOf="@+id/ivForwardIcon"
        app:layout_constraintTop_toBottomOf="@id/tvStoreName" />

    <ImageView
        android:id="@+id/ivForwardIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/forward"
        app:layout_constraintBottom_toBottomOf="@id/ivStoreIcon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivStoreIcon" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/ivStoreIcon"
        android:layout_marginTop="5dp"
        android:background="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>